{
    "app-id": "com.gog.GAMENAME",
    "branch": "master",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.24",
    "sdk": "org.gnome.Sdk",
    "base": "com.gog.Base",
    "base-version": "master",
    "command": "starter",
    "finish-args": [
        "--socket=x11",
        "--share=network",
        "--share=ipc",
        "--device=dri",
        "--socket=pulseaudio",
        "--persist=.local",
        "--persist=.config",
        "--persist=.cache"
    ],
    "cleanup": [
        "/include"
    ],
    "modules": [
        {
            "name": "game",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/game /app/bin /app/lib",
                "install starter* /app/bin/"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "GAMEINSTALLER",
                    "dest-filename": "installer.sh"
                },
                {
                    "type": "file",
                    "path": "gog-starter",
                    "dest-filename": "starter"
                },
                {
                    "type": "shell",
                    "commands": [
                        "chmod +x installer.sh",
                        "script --return -c './installer.sh -- --notermspawn --i-agree-to-all-licenses --noreadme --nooptions --noprompt --destination /app/game --ui=stdio' /dev/null"
                    ]
                }
            ]
        }
    ]
}
