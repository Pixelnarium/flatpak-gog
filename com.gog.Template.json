{
    "app-id": "com.gog.GAMENAME",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "sdk-version": "1.6",
    "base": "com.gog.Base",
    "command": "gog-starter",
    "finish-args": [
        "--socket=x11",
        "--share=network",
        "--share=ipc",
        "--device=dri",
        "--socket=pulseaudio",
        "--persist=.local",
        "--persist=.config",
        "--persist=.cache"
    ],
    "cleanup": [
        "/include"
    ],
    "modules": [
        {
            "name": "game",
            "no-autogen": true,
            "sources": [
                {
                    "type": "archive",
                    "path": "GAMEARCHIVE",
                    "dest": "game-extract"
                },
                {
                    "type": "file",
                    "path": "gog-Makefile",
                    "dest-filename": "Makefile"
                },
                {
                    "type": "file",
                    "path": "gog-starter"
                }
            ]
        }
    ]
}
